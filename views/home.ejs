<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener - Home</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
            line-height: 1.6;
        }

        /* Header Styles */
        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            padding: 1rem 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
            border-bottom: 1px solid #e2e8f0;
        }

        .header h1 {
            color: #4a5568;
            font-size: 1.75rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #4a5568;
            font-weight: 600;
            background: rgba(102, 126, 234, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 12px;
            border: 1px solid rgba(102, 126, 234, 0.2);
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 0.9rem;
        }

        .logout-btn {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logout-btn:hover {
            opacity: 0.9;
        }

        /* Main Container */
        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        /* Success Message */
        .success-message {
            background: linear-gradient(135deg, #48bb78, #38a169);
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(72, 187, 120, 0.25);
        }

        .success-message p {
            margin: 0 0 1rem 0;
            font-weight: 600;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .generated-url {
            background: rgba(255, 255, 255, 0.15);
            padding: 1rem;
            border-radius: 8px;
            word-break: break-all;
            font-family: 'Courier New', monospace;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
        }

        .generated-url a {
            color: white;
            text-decoration: none;
            flex: 1;
        }

        .generated-url a:hover {
            text-decoration: underline;
        }

        /* Form Styles */
        .form-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .form-container h2 {
            margin-bottom: 1.5rem;
            color: #4a5568;
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: #4a5568;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-group input {
            width: 100%;
            padding: 1rem 1rem 1rem 2.5rem;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.2s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .input-icon {
            position: absolute;
            left: 0.75rem;
            top: 2.75rem;
            color: #718096;
            font-size: 1.1rem;
        }

        .submit-btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.2s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .submit-btn:hover {
            opacity: 0.9;
        }

        .submit-btn.loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .btn-spinner {
            display: none;
        }

        .submit-btn.loading .btn-spinner {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Table Styles */
        .table-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .table-header {
            background: linear-gradient(135deg, #4a5568, #2d3748);
            color: white;
            padding: 1.5rem;
        }

        .table-header h2 {
            margin: 0;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead th {
            background: #f7fafc;
            padding: 1rem;
            text-align: left;
            font-weight: 700;
            color: #4a5568;
            border-bottom: 2px solid #e2e8f0;
            font-size: 0.9rem;
        }

        tbody tr {
            transition: background-color 0.2s ease;
            border-bottom: 1px solid #e2e8f0;
        }

        tbody tr:hover {
            background-color: rgba(102, 126, 234, 0.05);
        }

        tbody tr:nth-child(even) {
            background-color: #fafafa;
        }

        tbody td {
            padding: 1rem;
            vertical-align: middle;
        }

        tbody td:nth-child(3) {
            word-break: break-all;
            max-width: 300px;
        }

        /* Link Styles */
        .short-id-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            padding: 0.4rem 0.75rem;
            border-radius: 8px;
            background: rgba(102, 126, 234, 0.1);
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .short-id-link:hover {
            background: #667eea;
            color: white;
        }

        .original-url-link {
            color: #4a5568;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .original-url-link:hover {
            color: #667eea;
            text-decoration: underline;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .copy-btn, .analytics-btn {
            border: none;
            padding: 0.4rem 0.75rem;
            border-radius: 6px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
            font-weight: 500;
            text-decoration: none;
        }

        .copy-btn {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            border: 1px solid rgba(102, 126, 234, 0.3);
        }

        .copy-btn:hover {
            background: #667eea;
            color: white;
        }

        .analytics-btn {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .analytics-btn:hover {
            background: #10b981;
            color: white;
        }

        /* Click Badge */
        .click-badge {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            color: white;
            padding: 0.3rem 0.6rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header {
                padding: 1rem;
                flex-direction: column;
                gap: 1rem;
            }

            .header-right {
                width: 100%;
                justify-content: space-between;
            }

            .container {
                padding: 0 1rem;
                margin: 1rem auto;
            }

            .form-container {
                padding: 1.5rem;
            }

            table {
                font-size: 0.85rem;
            }

            tbody td {
                padding: 0.75rem 0.5rem;
            }

            .action-buttons {
                flex-direction: column;
                gap: 0.3rem;
            }

            .generated-url {
                flex-direction: column;
                align-items: stretch;
                gap: 0.75rem;
            }
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #718096;
        }

        .empty-state h3 {
            margin-bottom: 0.5rem;
            color: #4a5568;
            font-size: 1.3rem;
        }

        /* Notification */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, #48bb78, #38a169);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(72, 187, 120, 0.3);
            z-index: 1000;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            max-width: 300px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .notification.show {
            opacity: 1;
        }

        .notification.error {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <h1>üîó URL Shortener</h1>
        <div class="header-right">
            <% if (locals.username) { %>
                <div class="user-info">
                    <div class="user-avatar">
                        <%= username.charAt(0).toUpperCase() %>
                    </div>
                    <span>Welcome, <%= username %>!</span>
                </div>
            <% } %>
            <div class="header-buttons">
                <a href="/user/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
        </div>
    </header>

    <!-- Main Container -->
    <div class="container">
        <!-- Success Message -->
        <% if (locals.id) { %>
            <div class="success-message">
                <p>‚úÖ URL Generated Successfully!</p>
                <div class="generated-url">
                    <a href="http://localhost:8001/url/<%= id %>" target="_blank">
                        http://localhost:8001/url/<%= id %>
                    </a>
                    <button class="copy-btn" onclick="copyToClipboard('http://localhost:8001/url/<%= id %>')">
                        <i class="fas fa-copy"></i>
                        Copy
                    </button>
                </div>
            </div>
        <% } %>

        <!-- URL Shortener Form -->
        <div class="form-container">
            <h2>Create Short URL</h2>
            <form method="POST" action="/url" onsubmit="handleSubmit(event)">
                <div class="form-group">
                    <label for="url">
                        <i class="fas fa-globe"></i>
                        Enter Your Original URL
                    </label>
                    <i class="fas fa-link input-icon"></i>
                    <input 
                        type="url" 
                        name="url" 
                        id="url"
                        placeholder="https://www.example.com"
                        required
                    >
                </div>
                <button type="submit" class="submit-btn" id="submitBtn">
                    <i class="fas fa-magic"></i>
                    Generate Short URL
                    <div class="btn-spinner"></div>
                </button>
            </form>
        </div>

        <!-- URLs Table -->
        <% if (locals.urls && urls.length > 0) { %>
            <div class="table-container">
                <div class="table-header">
                    <h2>üìä Your Shortened URLs</h2>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Short ID</th>
                            <th>Original URL</th>
                            <th>Clicks</th>
                            <th>Created By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index) => { %>
                        <tr> 
                            <td><strong><%= index + 1 %></strong></td>
                            <td>
                                <a href="http://localhost:8001/url/<%= url.shortId %>" 
                                   target="_blank" 
                                   class="short-id-link"
                                   title="Click to visit shortened URL">
                                    <i class="fas fa-external-link-alt"></i>
                                    <%= url.shortId %>
                                </a>
                            </td>
                            <td>
                                <a href="<%= url.redirectURL %>" 
                                   target="_blank" 
                                   class="original-url-link"
                                   title="<%= url.redirectURL %>">
                                    <%= url.redirectURL.length > 50 ? url.redirectURL.substring(0, 50) + '...' : url.redirectURL %>
                                </a>
                            </td>
                            <td>
                                <span class="click-badge">
                                    <i class="fas fa-chart-line"></i>
                                    <%= url.visitHistory.length %>
                                </span>
                            </td>
                            <td><strong><%= url.createdBy %></strong></td>
                            <td>
                                <div class="action-buttons">
                                    <button class="copy-btn" 
                                            onclick="copyToClipboard('http://localhost:8001/url/<%= url.shortId %>')"
                                            title="Copy to clipboard">
                                        <i class="fas fa-copy"></i>
                                        Copy
                                    </button>
                                    <a href="/url/analytics/<%= url.shortId %>" 
                                       class="analytics-btn"
                                       title="View Analytics">
                                        <i class="fas fa-chart-bar"></i>
                                        Analytics
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else if (locals.urls) { %>
            <div class="table-container">
                <div class="empty-state">
                    <h3>No URLs Created Yet</h3>
                    <p>Create your first short URL using the form above!</p>
                </div>
            </div>
        <% } %>
    </div>

    <script>
        // Copy to clipboard functionality
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                showNotification('‚úÖ Copied to clipboard!', 'success');
            }).catch(function(err) {
                showNotification('‚ùå Failed to copy', 'error');
                console.error('Could not copy text: ', err);
            });
        }

        // Simple notification system
        function showNotification(message, type = 'success') {
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                <span>${message}</span>
            `;
            document.body.appendChild(notification);
            
            setTimeout(() => notification.classList.add('show'), 10);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 2500);
        }

        // Form submission with loading state
        function handleSubmit(event) {
            const btn = document.getElementById('submitBtn');
            btn.classList.add('loading');
        }

        // Auto-focus on input
        document.addEventListener('DOMContentLoaded', function() {
            const urlInput = document.getElementById('url');
            if (urlInput && !document.querySelector('.success-message')) {
                urlInput.focus();
            }
        });
    </script>
</body>
</html>
